<% for (const page of pages) { %>
<div
  style="
    box-sizing: border-box;
    max-width: 475px;
    width: 100%;
    background-color: rgba(227, 252, 255, 0.8);
    padding: 20px;
    border-radius: 20px;
    margin: 1rem 0;
    box-shadow: 0px 0px 1px 1px #ececec;
  "
>
  <div>
    <h4 style="margin: 0.3em 0">
      <a
        href="<%= page.storeUrl %>"
        style="font-weight: 100; color: inherit; text-decoration: none"
        >&#128722; <%= page.storeName %></a
      >
    </h4>
    <h3 style="margin: 0.5em 0">
      <%= page.type[0].toUpperCase() + page.type.substring(1)+": " + page.name %>
    </h3>
  </div>
  <div style="margin-bottom: 0.5rem">
    <span>
      <a
        href="https://store-<%= page.storeHash %>.mybigcommerce.com/manage/products/<%= page.type === 'brand' ? 'brands' : 'categories' %>/<%= page.id %>/edit"
        >Edit Page Title / Meta Description</a
      >
    </span>
  </div>
  <div>
    <span><a href="<%= page.url %>">View on storefront</a></span>
  </div>
</div>
<% } %>
