<div
  style="
    box-sizing: border-box;
    max-width: 475px;
    width: 100%;
    background-color: rgba(227, 252, 255, 0.8);
    padding: 20px;
    border-radius: 20px;
    margin: 1rem 0;
    box-shadow: 0px 0px 1px 1px #ececec;
  "
>
  <div>
    <h4 style="margin: 0.3em 0">
      <a
        href="<%= storeUrl %>"
        style="font-weight: 100; color: inherit; text-decoration: none"
        >&#128722; <%= storeName %></a
      >
    </h4>
    <h3 style="margin: 0.5em 0">
      <%= type[0].toUpperCase() + type.substring(1)+": " + name %>
    </h3>
  </div>
  <div style="margin-bottom: 0.5rem">
    <span
      >
      <a href="https://store-<%= storeHash %>.mybigcommerce.com/manage/products/<%= type === "brand" ? "brands" : "categories" %>/<%= id %>/edit"
        >Edit Page Title / Meta Description</a>
    </span>
  </div>
  <div>
    <span><a href="<%= storeUrl + slug %>">View on storefront</a></span>
  </div>
</div>
